#version 330 corelayout (location = 0) in vec4 position;//layout (location = 1) in vec4 color;out vec4 theColor;uniform mat4 cameraToClipMatrix;uniform mat4 worldToCameraMatrix;uniform mat4 modelToWorldMatrix;uniform vec4 color;void main(){	vec4 temp;	temp = modelToWorldMatrix * position;	temp = worldToCameraMatrix * temp;	gl_Position = cameraToClipMatrix * temp;	theColor = color;}