#version 330 corelayout (location = 0) in vec4 position;uniform mat4 mvp;uniform vec4 texRect;uniform mat4 gWorld;uniform vec2 texSize;out	vec4 worldPos;out vec3 colour;	out	vec3 normal;out	vec2 texCoord;void main(){	//gl_Position = gWorld * position;	gl_Position = mvp * position;		vec2 coord = vec2(position.x+0.5,-position.y);	vec2 scale = texRect.zw / texSize;	vec2 offset = texRect.xy / texSize;		coord = (coord * scale)+offset;		coord.y = coord.y+(texRect.w / texSize.y);		texCoord = coord;	normal = normalize(gWorld* vec4(0,0,-1,0)).xyz;		worldPos = gWorld * position;		//gl_Position = position;}