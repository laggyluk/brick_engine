#version 330 corelayout (location = 0) in vec4 position;layout (location = 1) in vec4 color;out vec4 worldPos;smooth out vec3 colour;out	vec3 normal;uniform mat4 gWorld;uniform mat4 mvp;void main(){		//colour = color.xyz;			worldPos = gWorld * position;	gl_Position = mvp * position;	colour.x = max(color.x,0);	colour.y = max(color.y,0);	colour.z = max(color.z,0);	int i = int(color[3]);	float x = (i / 100)-2;	float y = ((i / 10) % 10)-2;    float z = (i % 10)-2;     	normal = vec3(x,y,z);}